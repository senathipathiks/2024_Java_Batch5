package com.sturestapi.controller;

import java.util.List;

import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.sturestapi.model.Student;
import com.sturestapi.service.StuServiceImpl;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;


@RestController
@RequestMapping("/student")
@CrossOrigin("*")
public class StuController {

	
	public StuController(StuServiceImpl service, String s, String f) {
		super();
		this.service = service;
		this.s = s;
		this.f = f;
	}

	StuServiceImpl service;
	
	@PostMapping
	public String insertStudent(@RequestBody Student stud) {
		String msg="";
		try {
			service.addStudent(stud);
			msg=s;
		}
		catch(Exception e) {
			e.printStackTrace();
			msg=f;
		}
		return msg;
	}
	
	@GetMapping("{id}")
	public Student getStudentbyId(@PathVariable("id") int id) {
		return service.getStudent(id);
	}

	@GetMapping("/all")
	public List<Student> viewallStudent() {
		return service.getAllStudents();
	}
	
	@PutMapping
	public String updStu(@RequestBody Student stud) {
		String msg="";
		try {
			service.updateStu(stud);
			msg=s;
		}
		catch(Exception e) {
			e.printStackTrace();
			msg=f;
		}
		return msg;
	}
	
	@DeleteMapping("{id}")
	public String delStudentbyId(@PathVariable("id") int id) {
		String msg="";
		try {
			service.delStu(id);
			msg=s;
		}
		catch(Exception e) {
			e.printStackTrace();
			msg=f;
		}
		return msg;
	}
	
	
//	@DeleteMapping("{name}")
//	public String delStudentbyName(@PathVariable("name") String name) {
//		String msg="";
//		try {
//			service.delStuByName(name);
//			msg="Success";
//		}
//		catch(Exception e) {
//			e.printStackTrace();
//			msg="Failure";
//		}
//		return msg;
//	}
	
	
}
