<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
	<class name="com.hibernate.Hibernate_ex2.Cake" table="cake">

	<id name="cake_id" type="int" column="cake_id">
		<generator class="assigned"></generator>
	</id>

	<property name="cake_price" type="int" column="cake_price"></property>
	<property name="cake_name" type="string" column="cake_name"></property>
	<property name="cake_title" type="string" column="cake_title"></property>
	<property name="cake_quantity" type="string" column="cake_quantity"></property>
	<property name="cake_flavour" type="string" column="cake_flavour"></property>
</class>

</hibernate-mapping>
