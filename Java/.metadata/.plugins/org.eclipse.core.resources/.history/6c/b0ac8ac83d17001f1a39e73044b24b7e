<%
int num = Integer.parseInt(request.getParameter("num"));

for(int i = 1 ; i <= num ; i++){
	out.println("<table><tr><td>"+i+"</td><td>*</td><td>"+num+" = </td><td>"+(i*num)+"</td></tr></table>");
}
%>
